{{ widget('\\XLite\\View\\Payment\\MethodStatus', method=this.getPaymentMethod()) }}

<div class="payment-settings emerchantpay">

    <div class="payment-settings-controls-container">
        {%  set widgetClass = this.getModelFormClass() %}
        {{ widget(widgetClass, paymentMethod=this.getPaymentMethod()) }}
    </div>

    <div class="payment-settings-help-container">
        <div class="payment-settings-help-inner-container">
            <a href="{{ this.getAuthorWebSite() }}" target="_blank" class="logo-emerchantpay"></a>

            <div class="help-title">
                {{ this.getTitle() }}
            </div>

            <div class="help-text">
                {{ this.getPaymentMethod().getDescription() }}
            </div>

            <div class=
                 "logo-{{ this.getPaymentMethod().getServiceName()|first|lower }}{{ this.getPaymentMethod().getServiceName()[1:] }}">
            </div>
        </div>
    </div>
</div>
